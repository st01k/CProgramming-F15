#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void translate (char* pWord);

int main (void)
{
    const int   MAXLN = 81;

    char  eSentence[MAXLN];
    char* pESnt = eSentence;
    char* token;

        printf("English to Pig Latin Translator\n\n");
        printf("Type a complete sentence without punctuation and press Enter: \n\n");
        gets(eSentence);
        printf("\n");

        token = strtok(pESnt, " ");
        translate(token);

        while (token != NULL)
        {
            token = strtok(NULL, " ");
             translate(token);
        }

    return 0;
}

void translate (char* pWord)
{
    const char* pVOWELS = "aeiou";

    int   diff;
    char* wToken;
    char* tWord;
    char* suffix = "ay";

    if (!(tWord = calloc((strlen(pWord) + 1), sizeof(char*)))) exit (1);
    strncpy(tWord, pWord, strlen(pWord));
    wToken = strpbrk(tWord, pVOWELS);
    diff = wToken - tWord;
    strncat(wToken, tWord, diff);
    strcat(wToken, suffix);
    printf("%s ", wToken);

    return;
}
